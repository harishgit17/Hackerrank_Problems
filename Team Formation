import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        int tplayers = sc.nextInt();
        int perteam = sc.nextInt();
        int total=tplayers/perteam;
        int remain=tplayers%perteam;
        System.out.println("Total teams formed: "+total);
         System.out.println("Players left out: "+remain); 
    }
}
